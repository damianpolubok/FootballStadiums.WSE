<Window x:Class="FootballStadiums.WSE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballStadiums.WSE"
        xmlns:views="clr-namespace:FootballStadiums.WSE.Views"
        mc:Ignorable="d"
        Title="Stadium Manager" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5" FontFamily="Segoe UI">

    <Grid>
        <TabControl x:Name="MyTabControl" BorderThickness="0" Background="Transparent" Margin="10">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="20,10"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" BorderBrush="Transparent" BorderThickness="0,0,0,3" Margin="0,0,10,0">
                                    <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header" Margin="10,5"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#007ACC"/>
                                        <Setter Property="Foreground" Value="#007ACC"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Foreground" Value="#666666"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Stadium Gallery">
                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Content="Refresh Data" Click="Button_Refresh_Click" HorizontalAlignment="Right" Margin="0,0,10,10"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding Stadiums}" 
                              Background="Transparent" BorderThickness="0" 
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Margin" Value="0,0,0,15"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListViewItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="8" Margin="5" Padding="0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="5"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="220"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <Border CornerRadius="8,0,0,8" ClipToBounds="True" Background="#EEEEEE">
                                            <Image Source="{Binding ImageUrl}" Stretch="UniformToFill" Height="140" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Margin="20,10" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Name}" FontSize="22" FontWeight="Bold" Foreground="#333"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding Address.City}" FontSize="16" Foreground="#555"/>
                                                <TextBlock Text=", " FontSize="16" Foreground="#555"/>
                                                <TextBlock Text="{Binding Address.Country}" FontSize="16" Foreground="#555"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Address.Street}" FontSize="14" Foreground="#888" Margin="0,2,0,10"/>
                                            <Separator Background="#EEE" Margin="0,0,0,10"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Home of: " FontWeight="Bold" Foreground="#007ACC"/>
                                                <TextBlock Text="{Binding Clubs.Count}" FontWeight="Bold" Foreground="#007ACC"/>
                                                <TextBlock Text=" Club(s)" Foreground="#007ACC"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">

                                            <Button Click="Button_Edit_Click"
                                                    Background="Transparent" 
                                                    BorderThickness="0"
                                                    Margin="0,0,5,0"
                                                    ToolTip="Edit Stadium">
                                                <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#999"/>
                                            </Button>

                                            <Button Click="Button_Delete_Click"
                                                    Background="Transparent" 
                                                    BorderThickness="0"
                                                    ToolTip="Delete Stadium">
                                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" FontSize="16" Foreground="#D9534F"/>
                                            </Button>
                                        </StackPanel>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>

            <TabItem Header="Add New Stadium">
                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="30">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="0" Opacity="0.1" BlurRadius="10"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="New Stadium Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333" HorizontalAlignment="Center"/>

                            <TextBlock Text="Stadium Name" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                            <TextBox x:Name="AddNameTxt" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="City" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                                    <TextBox x:Name="AddCityTxt" Margin="0,0,0,15"/>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Country" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                                    <TextBox x:Name="AddCountryTxt" Margin="0,0,0,15"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Street Address" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                            <TextBox x:Name="AddStreetTxt" Margin="0,0,0,15"/>

                            <TextBlock Text="Image URL (Link)" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                            <TextBox x:Name="AddImageTxt" Margin="0,0,0,15"/>

                            <TextBlock Text="Clubs (Comma separated)" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,5"/>
                            <TextBox x:Name="AddClubsTxt" Margin="0,0,0,25" ToolTip="Example: Real Madrid, Atletico Madrid"/>

                            <Button Content="Save Stadium" Click="Button_Add_Click" Height="45" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <Grid x:Name="OverlayContainer" Visibility="Collapsed" Background="#7F000000">
            <views:StadiumFormView x:Name="EditFormView"/>
        </Grid>

    </Grid>
</Window>